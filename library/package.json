    "@rollup/plugin-node-resolve": "^14.1.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.31",
    "@types/three": "^0.143.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
